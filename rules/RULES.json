{
  "project": "minty-maintenance",
  "version": "1.0.0",
  "lastUpdated": "2024-01-13",
  "rules": {
    "codeStyle": {
      "python": {
        "functionNaming": {
          "convention": "camelCase",
          "examples": {
            "good": ["openShortPosition", "calculateSpaceDiff", "writeChapterHeader"],
            "bad": ["open_short_position", "calculate_space_diff", "write_chapter_header"]
          }
        },
        "variableNaming": {
          "convention": "snake_case",
          "examples": {
            "good": ["report_dir", "chapter_status", "space_before"],
            "bad": ["reportDir", "chapterStatus", "spaceBefore"]
          }
        },
        "typeAnnotations": {
          "required": true,
          "scope": ["functions", "methods", "ambiguous_variables"],
          "imports": ["typing.Optional", "typing.List", "typing.Dict", "typing.Tuple"]
        },
        "stringFormatting": {
          "allowed": ["concatenation", "str.format", "percent"],
          "forbidden": ["f-strings"],
          "reason": "Python 2.x compatibility"
        },
        "functionComplexity": {
          "maxNesting": 3,
          "preferSmallFunctions": true,
          "singleResponsibility": true
        },
        "classOrganization": {
          "oneClassPerFile": true,
          "location": "separate_files"
        },
        "utilityFunctions": {
          "location": "utils.py",
          "criteria": "reusable_across_modules"
        }
      }
    },
    "git": {
      "commitFormat": {
        "specification": "conventional-commits",
        "pattern": "<type>(<scope>): <description>",
        "types": [
          "feat", "fix", "docs", "chore", "ci", 
          "refactor", "test", "build", "perf", "revert"
        ],
        "examples": [
          "docs(readme): add badges and quickstart",
          "ci: add shellcheck workflow",
          "refactor(script): extract report writer",
          "feat(report): add space-delta estimator"
        ]
      },
      "commitFrequency": {
        "policy": "early_and_often",
        "atomicity": "one_logical_change_per_commit"
      }
    },
    "projectStructure": {
      "directories": {
        "scripts/system": "System updates, packages, kernels",
        "scripts/apps": "Application updates",
        "scripts/cleanup": "Cleanup tasks",
        "scripts/health": "Health checks",
        "scripts/utils": "Common utilities",
        "reports": "Generated reports (gitignored)",
        "rules": "Rule files and schemas",
        ".github": "GitHub workflows and CI"
      },
      "modularity": {
        "chapterOrganization": "separate_python_modules",
        "orchestrator": "mint-maintainer-modular.py",
        "entryPoint": "mint-maintainer.sh"
      }
    },
    "maintenance": {
      "disabledChapters": [1],
      "disabledReason": {
        "1": "Timeshift checkpoint annotation issues"
      },
      "errorHandling": {
        "continueOnError": true,
        "userFriendlyMessages": true,
        "reportAllIssues": true
      }
    },
    "documentation": {
      "requiredFiles": [
        "CHANGELOG.md",
        "README.md",
        "RULES.md",
        "REPORT_SAMPLE.md",
        ".gitignore"
      ],
      "updatePolicy": "with_every_significant_change"
    },
    "testing": {
      "dryRunSupport": {
        "required": true,
        "clearIndication": true
      },
      "qualityChecks": [
        "shellcheck",
        "python_linters",
        "dry_run_test"
      ]
    },
    "autonomy": {
      "allowedWithoutAsking": [
        "documentation_updates",
        "ci_improvements",
        "linting_fixes",
        "test_additions",
        "makefile_targets",
        "folder_reorganization",
        "safety_refactoring"
      ],
      "requiresDiscussion": [
        "core_functionality_changes",
        "feature_removal",
        "breaking_changes",
        "major_architecture_decisions"
      ]
    }
  }
}
